{
  "gradio_demo": {
  "title": "CRQUBO: Combinatorial Reasoning with Large Language Models",
  "description": "Interactive demo of the CRQUBO framework for advanced reasoning tasks across multiple domains.",
    "theme": "soft",
    "server_name": "0.0.0.0",
    "server_port": 7860,
    "share": false,
    "debug": false,
    "show_error": true
  },
  "default_config": {
    "use_retrieval": false,
    "use_verification": false,
    "reason_sampler": {
      "num_samples": 5,
      "temperature": 0.7,
      "max_tokens": 1000
    },
    "semantic_filter": {
      "similarity_threshold": 0.8,
      "quality_threshold": 0.3
    },
    "combinatorial_optimizer": {
      "max_selections": 5,
      "solver_type": "classical"
    },
    "final_inference": {
      "strategy": "direct_synthesis",
      "temperature": 0.7
    }
  },
  "example_queries": [
    {
      "query": "Why does smoking cause lung cancer?",
      "domain": "causal",
      "use_retrieval": true,
      "use_verification": true,
      "description": "Causal reasoning with verification"
    },
    {
      "query": "If all birds can fly and penguins are birds, can penguins fly?",
      "domain": "logical",
      "use_retrieval": false,
      "use_verification": true,
      "description": "Logical reasoning with verification"
    },
    {
      "query": "What is 15% of 200?",
      "domain": "arithmetic",
      "use_retrieval": false,
      "use_verification": false,
      "description": "Arithmetic reasoning"
    },
    {
      "query": "How can we improve team productivity?",
      "domain": "general",
      "use_retrieval": true,
      "use_verification": false,
      "description": "General reasoning with retrieval"
    },
    {
      "query": "What are the main causes of climate change?",
      "domain": "causal",
      "use_retrieval": true,
      "use_verification": true,
      "description": "Complex causal analysis"
    },
    {
      "query": "Solve for x: 2x + 5 = 13",
      "domain": "arithmetic",
      "use_retrieval": false,
      "use_verification": false,
      "description": "Algebraic equation solving"
    },
    {
      "query": "Compare renewable and fossil fuel energy sources",
      "domain": "general",
      "use_retrieval": true,
      "use_verification": false,
      "description": "Comparative analysis"
    },
    {
      "query": "If A implies B and B implies C, what can we conclude about A and C?",
      "domain": "logical",
      "use_retrieval": false,
      "use_verification": true,
      "description": "Logical deduction"
    }
  ],
  "domains": [
    {
      "name": "Auto-detect",
      "value": "auto",
      "description": "Automatically detect the reasoning domain"
    },
    {
      "name": "Causal",
      "value": "causal",
      "description": "Cause-and-effect relationships"
    },
    {
      "name": "Logical",
      "value": "logical",
      "description": "Logical reasoning and deduction"
    },
    {
      "name": "Arithmetic",
      "value": "arithmetic",
      "description": "Mathematical calculations and problem-solving"
    },
    {
      "name": "General",
      "value": "general",
      "description": "General reasoning and analysis"
    }
  ],
  "features": {
    "enable_retrieval": true,
    "enable_verification": true,
    "enable_history": true,
    "enable_analytics": true,
    "enable_export": true,
    "enable_examples": true,
    "enable_configuration": true
  }
}
